{
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.editorTab.side": "right",
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xe->bib->xe->xe",
            "tools": [
                "xelatex",
                "biber",
                "xelatex",
                "xelatex"
            ]
        }
    ],
    "files.exclude": {
        "**/*.aux": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.gz": true,
        "**/*.log": true,
        "**/*.out": true,
        "**/*.run.xml": true,
        "**/*.bcf": true,
        "**/*.blg": true,
        "**/*.bbl": true,
        "**/*.toc": true,
        "**/*.loa": true,
        "**/*.lof": true,
        "**/*.lot": true
    }
}
